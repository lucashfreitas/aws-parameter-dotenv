{
  "include": ["./src"],
  "exclude": ["node_modules", "out", "*.spec.ts"],
  "compilerOptions": {
    "outDir": "out",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
